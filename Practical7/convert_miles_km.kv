BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Up'
                on_press: app.plus_minus_one(1)
            Button:
                text: 'Down'
                on_press: app.plus_minus_one(-1)
#   Button:
#       text: 'Convert m to km'
#       on_press: app.handle_calculate()
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 0, 1)
